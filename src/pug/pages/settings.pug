extends ../layouts/base

append vars
    - title = 'Настройки';
    - type = 'lk';
block content
    +b.settings.section
        +e.wrap.wrap
            aside.tab-panel
                a(href="#profile" data-tab-panel="profile").tab-panel_title.active Профиль
                a(href="#contacts" data-tab-panel="contacts").tab-panel_title Контакты
                a(href="#safe" data-tab-panel="safe").tab-panel_title Безопасность
            main.profile-content.tab-all-content
                .tab-content.tab-content--profile.active(data-tab-content="profile")
                    form.form.profile-form
                        .title-group.title-group-first.h3 Основная информация
                        .form-group
                            .form-group_title Имя
                            .form-group_data
                                input(type="text" value="Не указано" readonly).input-name.not-active
                        .form-group
                            .form-group_title Фамилия
                            .form-group_data
                                input(type="text" value="Не указано" readonly).input-surname.not-active
                        .form-group
                            .form-group_title Отчество
                            .form-group_data
                                input(type="text" value="Не указано" readonly).input-patronymic.not-active
                        .form-group
                            .form-group_title Адрес
                            .form-group_data
                                input(type="text" value="Не указано" readonly).input-address.not-active
                        .form-group
                            .form-group_title Лицевой счет
                            .form-group_data
                                input(type="text" value="Не указано" readonly).input-personal-acc.not-active
                        .form-group
                            .form-group_title Тип прибора
                            .form-group_data
                                input(type= "text" value="Не указано" readonly).input-type-device.not-active
                        .form-group
                            .form-group_title Серийный номер прибора
                            .form-group_data
                                input(type="text" value="Не указано" readonly).input-number-device.not-active
                .tab-content.tab-content--contacts(data-tab-content="contacts")
                    form.form.contacts-form
                        .title-group.h3 Контактная информация
                        .form-group
                            .form-group_title Телефон
                            .form-group_data
                                input(type="tel" name="phone" value="" placeholder="Данные не введены" readonly).input-phone.not-active
                                .edit-field Изменить
                        .form-group
                            .form-group_title E-mail
                            .form-group_data
                                input(type="email" name="email" value="" placeholder="Данные не введены" readonly).input-email.not-active
                                .edit-field Изменить
                        .form-group-down
                            .form-group_data
                                button.btn.btn_main Сохранить
                                .btn.btn_sec.btnCancel Отменить
                .tab-content.tab-content--safe(data-tab-content="safe")
                    .title-h2 Безопасность
                    form.form.safe-form
                        .title-group.title-group-first.h3 Настройки безопасности
                        .form-group.form-group
                            .form-group_title Старый пароль
                            .form-group_data
                                input(type="password" name="passwordOld" placeholder="●●●●●●").input-old-pass
                        .form-group.form-group
                            .form-group_title Новый пароль
                            .form-group_data
                                input(type="password" name="password" placeholder="●●●●●●").input-new-pass
                        .title-group.title-group--new-pass * Длина пароля не менее 6 символов
                        .form-group
                            .form-group_title Повторите пароль
                            .form-group_data
                                input(type="password" name="password2" placeholder="●●●●●●").input-repeat-pass
                        .form-group-down
                            .form-group_data
                                button.btn.btn_main Сохранить
                                .btn.btn_sec.btnCancel Отменить